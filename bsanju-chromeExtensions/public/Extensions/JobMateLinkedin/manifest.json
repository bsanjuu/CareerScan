{
  "name": "JobMate for LinkedIn",
  "version": "1.0",
  "description": "A LinkedIn tool to filter job listings by technology and insert ready-to-use messages in seconds",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/linkedin.png",
      "48": "images/linkedin.png",
      "128": "images/linkedin.png"
    }
  },
  "icons": {
    "16": "images/linkedin.png",
    "48": "images/linkedin.png",
    "128": "images/linkedin.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}